<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VendorSearch"
    android:padding="20dp"
    android:orientation="vertical"
   >

<!--For Vendor image, info and rating bar. -->
<!-- 1st layout Starts-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:background="@drawable/shadotovendor">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/pankaj" />
    </FrameLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VendorName"
            android:textSize="30dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="18dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18dp"/>

        <RatingBar
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/ratingBar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize=".5"
            android:rating="4.5"/>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/startgreen"/>
    </LinearLayout>
<!-- 1st layout End-->

<!-- 2nd layout starts -->
    <LinearLayout
       android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:background="@drawable/shadotovendor">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:src="@drawable/pankaj" />
        </FrameLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textView61"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VendorName"
                android:textSize="30dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="18dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18dp"/>

            <RatingBar
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/ratingBar31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize=".5"
                android:rating="2.5"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/startgreen"/>
    </LinearLayout>
    <!-- 2nd layout end -->

    <!--Vendor image, info and rating bar.-->

</LinearLayout>